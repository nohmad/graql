{
  "name": "graql",
  "version": "0.3.0",
  "author": "Gyoung-Yoon Noh <nohmad@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/nohmad/graql"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "description": "Light-weight GraphQL client usging node-fetch",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "test": "jest"
  },
  "keywords": [
    "graphql",
    "fetch",
    "client"
  ],
  "dependencies": {
    "@types/node-fetch": "^2.5.8",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
